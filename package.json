{
  "name": "erange",
  "description": "Erange (pronounced 'arrange') - flexible, lightweight and easy to use dependency injection for JS/TS.",
  "version": "0.1.7",
  "license": "MIT",
  "author": "Arklanq",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "homepage": "https://github.com/arklanq/erange#readme",
  "repository": "https://github.com/arklanq/erange",
  "scripts": {
    "build": "rollup -c .config/rollup/rollup.config.js",
    "prebuild-production": "yarn clear-cache && yarn check-code && yarn lint-code && yarn format-code",
    "build-production": "yarn build --environment NODE_ENV:production",
    "start": "yarn --cwd dist node --enable-source-maps .",
    "format-code": "prettier --log-level warn --write \"src/**/*.ts\"",
    "lint-code": "eslint \"src/**/*.ts\" --cache-location node_modules/.cache/eslint/.eslint-cache --fix",
    "check-code": "tsc --project tsconfig.json --noEmit",
    "updates-check": "ncu --configFilePath .config/ncu --configFileName ncu.config.cjs",
    "updates-force": "ncu --configFilePath .config/ncu --configFileName ncu.config.cjs -u",
    "clear-dist": "rimraf dist_backup",
    "clear-cache": "rimraf node_modules/.cache",
    "publish-package": "yarn --cwd dist publish --access=public --force --no-git-tag-version"
  },
  "dependencies": {
    "enhanced-exception": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^8.49.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/eslint": "^8.44.2",
    "@types/node": "^18.17.17",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-exports": "^1.0.0-beta.5",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "espree": "^9.6.1",
    "globals": "^13.21.0",
    "npm-check-updates": "^16.14.4",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.2",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
